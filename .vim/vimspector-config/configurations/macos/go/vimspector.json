{
  "configurations": {
    "Run": {
      "adapter": "delve",
      "configuration": {
        "request": "launch",
        "program": "${cwd}",
        "mode": "debug",
        "trace": true,
        //  "args": ["*${CommandLineArgs:-app=api}"],
        "variables": {
        //  "dlvFlags": "--build-flags=-tags=+wireinject",
        //  "buildFlags": "-tags=integration"
        },

        "showGlobalVariables": true
      }
    },
    "Test": {
      "extends": "run",
      "configuration": {
        "mode": "test",
        "program": "${TestPackage:${fileDirname\\}}"
      }
    }
  }
}
