{
  "suggest.triggerCompletionWait": 50,
  "diagnostic.enable": true,
  "diagnostic.refreshOnInsertMode":true,
  "diagnostic.errorSign":"âœ–",
  "diagnostic.displayByAle": false,
  "diagnostic.virtualText": true,
  "diagnostic.checkCurrentLine": true,
  "yaml.trace.server":"verbose",
  "codeLens.enable": true,
  "suggest.enablePreselect": true,
  "suggest.triggerAfterInsertEnter": true,
  "explorer.filename.colored.enable": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "vim-devicons",
  "explorer.file.reveal.auto":true,
  "explorer.file.showHiddenFiles":true,
  "explorer.file.reveal.whenOpen":true,
  "explorer.width": 50,
  "explorer.keyMappings.global": {
    "gl": false
  },
  "coc.preferences.formatOnSaveFiletypes": ["go"],
  "semanticTokens.filetypes": ["go"],
  "go.goplsOptions": {
    "semanticTokens": true,
    "gofumpt": true,
    "staticcheck": true,
    "usePlaceholders": true,
    "codelenses": {
      "gc_details": true
    },
    "local": "github.com/InVisionApp/permissions-apiv2",
    "buildFlags": ["-tags=integration"]
  },
  "javascript.validate.enable": false,
  "languageserver": {
    "golangci-lint-languageserver": {
      "command": "golangci-lint-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "command": ["golangci-lint", "run", "--out-format", "json"]
      }
    }
  },
  "texlab.build.onSave": true
}
